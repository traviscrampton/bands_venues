<h2> <%= @venue.title() %> </h2>
<br>

<% if @venue.bands.any? %>
  <h3>Here are the bands that are playing at this venue:</h3>
  <ul>
    <% @venue.bands.each() do |venue_band| %>
    <li><a href='/bands/<%= venue_band.id() %>'><%= venue_band.name() %></a> </li>

    <% end %>
  </ul>

  <% else %>

    <p><strong>There are currently no Bands playing at this venue</p>
    <br>

<% end %>


<p>Add a band to this venue:<p>
<form id="add_band_id" action="/venues/<%= @venue.id() %>/band" method="post">
  <input name="_method" type="hidden" value="patch">
  <input type="hidden" name="venue_id" id="venue_id" value="<%= @venue.id() %>">
  <label for="band_id">Select a band:  </label>
    <br>
  <select id="band_id" name="band_id">
    <option value=""></option>
    <% @bands.each() do |band| %>
      <option value="<%= band.id() %>"><%= band.name() %></option>
    <% end %>
  </select>
  <button type="submit">Submit</button>
</form>
